<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:float="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="rocks.susurrus.susurrus.fragments.IntroPageOneFragment"
    android:rowCount="3"
    android:columnCount="3"
    android:padding="30dp"
    android:background="@color/susurrus_purple">

    <TextView
        android:id="@+id/intro_three_headline"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/intro_three_headline"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="24dp"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:gravity="center"
        />

    <com.wrapp.floatlabelededittext.FloatLabeledEditText
        android:id="@+id/username_input_container"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/intro_three_headline"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        float:fletTextAppearance="@style/floatlabelededittext"
        >

        <EditText
            android:id="@+id/username_input_name"
            android:layout_width="260dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/create_room_image"
            android:textColor="@color/susurrus_white"
            android:textColorHint="@color/susurrus_white"
            />

    </com.wrapp.floatlabelededittext.FloatLabeledEditText>

    <ImageButton
        android:id="@+id/username_refresh_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/refresh_24"
        android:layout_alignBottom="@+id/username_input_container"
        android:layout_alignEnd="@+id/username_input_container" />

</RelativeLayout>
